<UserControl x:Class="UsersApp.UserControl.AccountPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UsersApp.UserControl"
             mc:Ignorable="d" 
             d:DesignHeight="615" d:DesignWidth="800" Background="White">
    <UserControl.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="FontFamily" Value="Fonts/#Jost"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Профиль" FontFamily="#Jost" HorizontalAlignment="Left" FontSize="28" Margin="65,5,0,0" VerticalAlignment="Top" Width="145"/>
        <Label x:Name="label_name" FontFamily="#Jost"  HorizontalAlignment="Left"  FontSize="22" Margin="75,74,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.475,2.15"/>
        <Label x:Name="Label_last_name" FontFamily="#Jost" HorizontalAlignment="Left" FontSize="22" Margin="79,89,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_role" FontFamily="#Jost"  HorizontalAlignment="Left" FontSize="22" Margin="75,109,0,0" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
